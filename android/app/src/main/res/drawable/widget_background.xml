<?xml version="1.0" encoding="utf-8"?>
<!-- Professional Widget Background with Glassmorphism Effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Main Background -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#CC000000"/> <!-- 80% opacity black -->
            <corners android:radius="24dp"/>
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF"/> <!-- Subtle white border -->
        </shape>
    </item>
    
</layer-list>